@{
    ViewData["Title"] = "Secure Login";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card border-success">
            <div class="card-header bg-success text-white">
                <h3> Secure Login Form</h3>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <h5> This form is protected against SQL Injection!</h5>
                    <p><strong>Try these payloads to see they are blocked:</strong></p>
                    <ul>
                        <li><code>' OR '1'='1</code> - Basic bypass</li>
                        <li><code>' OR 1=1--</code> - Comment-based bypass</li>
                        <li><code>admin' --</code> - Username bypass</li>
                    </ul>
                </div>

                <form method="post" asp-action="LoginSecure">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label for="username">Username:</label>
                        <input type="text" id="username" name="username" class="form-control"
                               placeholder="Enter username" required />
                    </div>

                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" id="password" name="password" class="form-control"
                               placeholder="Enter password" required />
                    </div>

                    <button type="submit" class="btn btn-success btn-lg">Secure Login</button>
                </form>

                @if (ViewBag.Message != null)
                {
                    <div class="alert alert-info mt-3">
                        <h5>@ViewBag.Message</h5>
                        @if (ViewBag.Username != null)
                        {
                            <p><strong>Username:</strong> @ViewBag.Username</p>
                        }
                        @if (ViewBag.SecurityWarning != null)
                        {
                            <div class="alert alert-warning mt-2">
                                <strong>Security Alert:</strong> @ViewBag.SecurityWarning
                            </div>
                        }
                    </div>
                }
            </div>
        </div>

        <div class="card mt-4">
            <div class="card-header bg-primary text-white">
                <h5> How SQL Injection Protection Works</h5>
            </div>
            <div class="card-body">
                <p><strong>This form uses:</strong></p>
                <ul>
                    <li> Parameterized queries (via Entity Framework)</li>
                    <li> Input validation and sanitization</li>
                    <li> SQL injection pattern detection</li>
                    <li> Proper error handling</li>
                </ul>
            </div>
        </div>
    </div>
</div>