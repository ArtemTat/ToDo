@{
    ViewData["Title"] = "Login Forms - Security Demo";
}

<div class="row">
    <!-- Уязвимая форма -->
    <div class="col-md-4">
        <div class="card border-danger mb-4">
            <div class="card-header bg-danger text-white">
                <h5> Vulnerable Login</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-action="Login">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label>Username:</label>
                        <input type="text" name="username" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label>Password:</label>
                        <input type="password" name="password" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-danger">Vulnerable Login</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Защищенная форма от SQL инъекций -->
    <div class="col-md-4">
        <div class="card border-warning mb-4">
            <div class="card-header bg-warning text-white">
                <h5> SQL Injection Protected</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-action="LoginSecure">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label>Username:</label>
                        <input type="text" name="username" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label>Password:</label>
                        <input type="password" name="password" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-warning">SQL Protected Login</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Защищенная форма от перебора -->
    <div class="col-md-4">
        <div class="card border-success mb-4">
            <div class="card-header bg-success text-white">
                <h5> Brute-Force Protected</h5>
            </div>
            <div class="card-body">
                <form method="post" asp-action="LoginProtected">
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label>Username:</label>
                        <input type="text" name="username" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label>Password:</label>
                        <input type="password" name="password" class="form-control" required />
                    </div>
                    <button type="submit" class="btn btn-success">Brute-Force Protected</button>
                </form>
                <small class="text-muted">Max 3 attempts, then 5min lockout</small>
            </div>
        </div>
    </div>
</div>

<!-- Форма для сброса блокировки -->
<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h6> Testing Tools</h6>
            </div>
            <div class="card-body">
                <form method="post" asp-action="ResetLockout">
                    @Html.AntiForgeryToken()
                    <div class="input-group">
                        <input type="text" name="username" class="form-control" placeholder="Username to reset lockout" />
                        <button type="submit" class="btn btn-outline-secondary">Reset Lockout</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Результаты -->
@if (ViewBag.Message != null)
{
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="alert alert-info">
                <h5>@ViewBag.Message</h5>
                @if (ViewBag.Username != null)
                {
                    <p><strong>Username:</strong> @ViewBag.Username</p>
                }
                @if (ViewBag.SecurityWarning != null)
                {
                    <div class="alert alert-warning mt-2">
                        <strong>Security Alert:</strong> @ViewBag.SecurityWarning
                    </div>
                }
            </div>
        </div>
    </div>
}

<!-- Инструкция по тестированию -->
<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h5> Brute-Force Testing Instructions</h5>
            </div>
            <div class="card-body">
                <h6>Test Credentials:</h6>
                <ul>
                    <li><strong>admin</strong> / <strong>Password123!</strong> (correct)</li>
                    <li><strong>user</strong> / <strong>UserPass123!</strong> (correct)</li>
                    <li><strong>test</strong> / <strong>TestPass123!</strong> (correct)</li>
                </ul>

                <h6>Brute-Force Test:</h6>
                <ol>
                    <li>Use "Brute-Force Protected" form</li>
                    <li>Enter wrong password 3 times</li>
                    <li>Account should lock for 5 minutes</li>
                    <li>Use "Reset Lockout" to unlock for testing</li>
                </ol>

                <h6>ZAP Testing:</h6>
                <ul>
                    <li>Use "Fuzzer" to test multiple passwords</li>
                    <li>Observe account lockout behavior</li>
                    <li>Test different usernames and passwords</li>
                </ul>
            </div>
        </div>
    </div>
</div>